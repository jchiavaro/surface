- if session[:user_id].nil?
  :plain
    <form action="/login" class="simple_form navbar-form pull-right" method="get">
    <input class="string email required" id="user_email" name="user[email]" placeholder="User Email" size="50" type="email" />
    <input id="user_password" input_html="{:class=&gt;&quot;span2&quot;}" label="false" name="user[password]" placeholder="User Password" size="30" type="password" />
    <input class="btn btn-primary" input_html="{:class=&gt;&quot;span2&quot;}" name="commit" type="submit" value="Login" />
    </form>

- if !session[:user_id].nil?
  %p.navbar-text.pull-right
    Logged in as
    %a{:href => "#"} #{@user.first_name}!
  

