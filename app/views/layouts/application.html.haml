!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title= content_for?(:title) ? yield(:title) : "Surface"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "bootstrap", :media => "all"
    = stylesheet_link_tag "font-awesome", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "bootstrap"
    = csrf_meta_tags
    = yield(:head)
  %body
    .wrapper
      %div{class: 'navbar navbar-fixed-top navbar-inverse'}
        %div.navbar-inner
          .container-fluid
            = render 'layouts/navigation'
      .container-fluid.container-fluid-home
        = render partial: 'layouts/messages', flash: flash
        - if signed_in?
          = controller.sub_layout ? (render :partial => "/layouts/#{controller.sub_layout}") : yield
      .push
        = yield
    %footer.footer
      = render 'layouts/footer'
