= simple_form_for(:user, url: users_path, :html => { :class => 'form-horizontal' }) do |f|
  = f.input :first_name, label: false, :input_html => { :class => "span6" }, :placeholder => 'First Name'
  = f.input :last_name, :input_html => { :class => "span6" }, :placeholder => 'Last Name', label: false
  = f.input :email, :placeholder=> 'Email', :input_html => { :class => "span6" }, label: false
  = f.input :password, :placeholder => 'Password', :input_html => { :class => "span6" }, label: false
  = f.input :password_confirmation, :placeholder => 'Confirmation', :input_html => { :class => "span6" }, label: false
  = f.input :birthday, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, order: [:month, :day, :year], label: false
  = f.input :gender, :collection => {'Male'=>'male', 'Female'=>'female'}, :as => :radio_buttons, :item_wrapper_class => 'inline', label: false
  = f.button :submit, "Register", :class => 'btn-primary'
